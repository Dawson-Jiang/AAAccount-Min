<!--index.wxml-->
<view class="page">
	<view class="page_hd" style="display:flex">
		<picker mode="date" fields="month" value="{{date}}" start="2017-01-01" end="2025-12-01" bindchange="bindDateChange">
			<button class="weui-btn" style="margin:8rpx;" type="default">{{date}}</button>
		</picker>
		<picker bindchange="bindFamilyChange" value="{{familyIndex}}" range-key="name" range="{{families}}">
			<button class="weui-btn"  style="margin:8rpx;" type="default">{{families[familyIndex].name}}</button>
		</picker>
	</view>
	<view class="page_bd">
		body
	</view>
	<view style=" position: fixed;bottom:0;width:100%;background:#ffffff">
		<button bindtap="bindViewTap" style="width:90%;margin-top:12rpx;" type="primary">添加</button>
	</view>
</view>